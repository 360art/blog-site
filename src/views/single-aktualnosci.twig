<link rel='stylesheet' href='{{site.theme.link}}/css/styles.min.css' type='text/css' media='screen' />
<div class="single">
	<div class="row">
		<div class="col-md-12">
			<img src="{{post.thumbnail.src('medium')}}" alt="{{post.title}}" class="thumbnail single__inline-block">
			<div class="single__title">
				{{post.title}}
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-md-12">
			<div class="single__paragraph util__text-black">
				{{post.content}}
			</div>
		</div>
	</div>
	
</div>

