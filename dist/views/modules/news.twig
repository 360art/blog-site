<div class="news" id="aktualnosci">
	<div class="container">
		<div class="row">
			<div class="col-md-8">
				<div class="util__headline-1 util__headline-black">
					<h1>Aktualności</h1>
				</div>
			</div>
		</div>
		<div class="row">
			{% for post in aktualnosci %}
			<div class="col-md-4 col-sm-6">
				<img src="{{post.thumbnail}}" class="news__img img-responsive" alt="Lorem">
				<h2 class="news__title">{{post.title}}</h2>
				<h3 class="news__author-date">{{post.meta_imię_i_nazwisko}} {{post.post_date}}</h3>
				<p class="util__paragraph util__text-black">
					{{post.post_content}}
				</p>
				<div class="news__more-wrap">
					<a class="news__more" href="#">Czytaj Dalej</a>
				</div>
			</div>
			{% endfor %}
		</div>
	</div>
</div>